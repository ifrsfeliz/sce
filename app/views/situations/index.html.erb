<h1 class="title">Lista de Situações</h1>

<table class="table table-striped">
  <tr>
      <th>Nome</th>
      <th colspan="3">Ações</th>
  </tr>

  <%= content_tag_for(:tr, @situations) do |situation| %>
          <td><%= situation.nome %></td>
        <td>
      <%= link_to 'Mostrar', situation %>
      <%= link_to 'Editar', edit_situation_path(situation) %>
      <%= link_to 'Destruir', situation, method: :delete, data: { confirm: 'Você tem certeza?' } %>
    </td>
  <% end %>
</table>

<hr />

<%= link_to 'Nova Situação', new_situation_path, class: 'btn btn-success' %>
