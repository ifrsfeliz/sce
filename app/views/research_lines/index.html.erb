<h1 class="title">Lista de Linhas de Extensão</h1>

<table class="table table-striped">
  <tr>
    <th><%= sort_link @q, :nome, 'Nome' %></th>
    <th colspan="3">Ações</th>
  </tr>

  <%= content_tag_for(:tr, @research_lines) do |research_line| %>
    <td><%= research_line.nome %></td>

    <% if can? :read, research_line %>
      <td><%= link_to 'Mostrar', research_line, class: 'btn btn-default btn-xs', id: "show_research_line_#{research_line.id}" %></td>
    <% end %>
    <% if can? :edit, research_line %>
      <td><%= link_to 'Editar', edit_research_line_path(research_line), class: 'btn btn-warning btn-xs', id: "edit_research_line_#{research_line.id}" %></td>
    <% end %>
    <% if can? :delete, research_line %>
      <td><%= link_to 'Destruir', research_line, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-xs', id: "destroy_research_line_#{research_line.id}" %></td>
    <% end %>
  <% end %>
</table>

<hr />

<%= link_to 'Nova Linha de Extensão', new_research_line_path, class: 'btn btn-success' %>
