<%= simple_form_for(@research_group) do |f| %>
  <%= f.error_notification %>

    <%= f.input :nome %>
    <%= f.association :researcher, label_method: :nome, value_method: :id, include_blank: false, input_html: {class: 'chosen-select'}, label: 'Líder' %>
    <%= f.input :link_grupo_cnpq %>
    <%= f.association :area, label_method: :nome, value_method: :id, include_blank: false, input_html: {class: 'chosen-select'}, label: 'Área' %>
    <%= f.input :ultima_verificacao, as: :date_picker, label: 'Última Verificação' %>

    <%= f.button :submit, class: 'btn btn-primary'%>
<% end %>
