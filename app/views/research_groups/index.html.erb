<h1 class="title">Lista de Grupos de Pesquisa</h1>

<table class="table table-striped">
  <tr>
      <th>Nome</th>
      <th>Líder</th>
      <th>Link Grupo CNPQ</th>
      <th>Grande Área</th>
      <th>Última Verificação</th>
      <th colspan="3">Ações</th>
  </tr>

  <%= content_tag_for(:tr, @research_groups) do |research_group| %>
    <td><%= research_group.nome %></td>
    <td><%= link_to research_group.professor.nome, research_group.professor %></td>
    <td><%= research_group.link_grupo_cnpq %></td>
    <td><%= link_to research_group.area.nome, research_group.area unless research_group.area.nil? %></td>
    <td><%= l research_group.ultima_verificacao %></td>
    <td><%= link_to 'Mostrar', research_group, class: 'btn btn-default btn-xs' %></td>
    <td><%= link_to 'Editar', edit_research_group_path(research_group), class: 'btn btn-warning btn-xs' %></td>
    <td><%= link_to 'Destruir', research_group, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-xs' %></td>
  <% end %>
</table>

<hr />

<%= link_to 'Novo Grupo de Pesquisa', new_research_group_path, class: 'btn btn-success' %>
