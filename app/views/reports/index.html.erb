<h1 class="title">Lista de Relatórios</h1>

<table class="table table-striped">
  <tr>
    <th>Projeto</th>
    <th>Período de Desenvolvimento</th>
    <th>Status</th>
    <th colspan="3">Ações</th>
  </tr>

  <%= content_tag_for(:tr, @reports) do |report| %>
    <td><%= report.project.nome %></td>
    <td><%= l report.periodo_desenvolvimento_inicio %> à <%= l report.periodo_desenvolvimento_fim %></td>
    <td><%= report.entregue ? 'Entregue' : 'Pendente' %>
    <td>
      <%= link_to 'Mostrar', report, class: 'btn btn-default btn-xs' %>
      <%= link_to 'Editar', edit_report_path(report), class: 'btn btn-warning btn-xs' %>
      <%= link_to 'Destruir', report, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger btn-xs' %>
    </td>
  <% end %>
</table>

<hr />

<%= link_to 'Novo(a) Report', new_report_path, class: 'btn btn-success' %>
